@import 'nib'
@import 's-grid-settings'
@import 's-grid-functions'
@import 'typographic'
@import 'variables'

typographic()

body
  max-width 700px
  margin-left auto
  margin-right auto
  padding 1rem
  min-height 100vh
  grid(direction: 'column')
  justify-content space-between
  align-items center

header
  a
    color $body-color
    text-decoration none
    margin-left .5em
    margin-right .5em

main
  text-align center
  width 100%
  h1
    text-transform uppercase
    margin-bottom 0
  p.subtitle
    font-size 1.5rem
  #countdown
    display flex
    justify-content space-around
    text-align center
    .time
      font-weight $heading-font-weight
      font-size 1.5rem
      +above('m')
        font-size 2.5rem
        margin-bottom .5rem